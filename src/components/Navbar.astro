---
import { navLinks } from "../constants/navData";
---

<nav class="flex flex-row justify-between items-center gap-8">
  {
    navLinks.map((item) => (
      <a class="text-xl hover:scale-125 hover:font-bold" href={`${item.path}`}>
        {item.name}
      </a>
    ))
  }
</nav>

<style>
  a:hover {
    text-decoration: underline wavy #fffcf2;
  }
</style>
